<div class="page-header">
  <h1>Editing Location #<%= @location.id %></h1>
</div>

<%= form_tag(location_url(@location), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :company_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :company_id, @location.company_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :address1, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :address1, @location.address1, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :address2, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :address2, @location.address2, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :city, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :city, @location.city, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :state, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :state, @location.state, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :zip, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :zip, @location.zip, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Location", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
