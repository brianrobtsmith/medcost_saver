<h1>Categories</h1>

<% if admin_signed_in? %>

<p><%= link_to 'Add a New Category', new_category_url %></p>

<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= link_to 'Show', category_url(category), class: 'btn btn-primary' %></td>
     <% if admin_signed_in? %>
      <td><%= link_to 'Edit', edit_category_url(category), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Destroy', category_url(category), class: 'btn btn-danger', method: 'delete', data: { confirm: "Do you really want to delete this category?" } %></td>
    <% else %>
      <td></td>
      <td></td>
    <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

