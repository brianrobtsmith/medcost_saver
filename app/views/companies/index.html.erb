<h1>Medical Service Providers</h1>

<% if admin_signed_in? %>

<p><%= link_to 'Add a New Company', new_company_url %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.name %></td>
      <td><%= link_to 'Show Procedures', company_url(company), class: 'btn btn-primary' %></td>
    <% if admin_signed_in? %>
      <td><%= link_to 'Edit', edit_company_url(company), class: 'btn btn-warning' %></td>
      <td><%= link_to 'Destroy', company_url(company), method: 'delete', data: { confirm: "Do you really want to delete this company?" }, class: 'btn btn-danger' %></td>
    <% else %>
      <td></td>
      <td></td>
    <% end %>
    </tr>
  <% end %>
  </tbody>
</table>



