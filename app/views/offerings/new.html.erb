<div class="page-header">
  <h1>New Offering</h1>
</div>

<%= form_tag(offerings_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :procedure_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :procedure_id, options_from_collection_for_select(Procedure.all, :id, :name), class: 'form-control' %>

    </div>
  </div>

  <div class="form-group">
    <%= label_tag :company_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :company_id, options_from_collection_for_select(Company.all, :id, :name), class: 'form-control' %>

    </div>
  </div>

  <div class="form-group">
    <%= label_tag :exam_price, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :exam_price, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :test_price, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :test_price, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :total_price, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :total_price, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :notes, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :notes, nil, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Offering", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
