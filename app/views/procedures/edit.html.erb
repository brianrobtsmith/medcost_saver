<div class="page-header">
  <h1>Editing <%= @procedure.name %> Procedure</h1>
</div>

<%= form_tag(procedure_url(@procedure), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :name, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :name, @procedure.name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :category, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :id, options_from_collection_for_select(Category.all, :id, :name), class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Procedure", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
