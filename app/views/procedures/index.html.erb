<div class="jumbotron">
  <h1>Sick Call</h1>
  <p>Compare Medical Procedure Prices. Save on Out-of-Pocket Expenses.</p>
</div>

<% if admin_signed_in? %>
<p><%= link_to 'Add a New Procedure', new_procedure_url, class: 'btn btn-primary' %></p>
<% end %>

<div>
<form action="/procedures/search">
  <label for="procedure_name">Search Procedures:</label>
  <input id="procedure_name" name="procedure_name" list="procedures" />
  <datalist id="procedures">
  <% @procedures.each do |procedure| %>
    <option value="<%= procedure.name %>">
  <% end %>
  </datalist>
  <input type="submit" value="Compare">
</form>
</div>

<br>
<p></p>

<div class="btn-group">
  <a href="http://localhost:3000/categories"><button type="button" class="btn btn-primary">Browse by Category</button></a>
  <a href="http://localhost:3000/companies"><button type="button" class="btn btn-primary">Browse by Medical Provider</button></a>
</div>
